<h1>Listing essays</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @essays.each do |essay| %>
  <tr>
    <td><%=h essay.title %></td>
    <td><%=h essay.content %></td>
    <td><%= link_to 'Show', essay %></td>
    <td><%= link_to 'Edit', edit_essay_path(essay) %></td>
    <td><%= link_to 'Destroy', essay, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New essay', new_essay_path %>