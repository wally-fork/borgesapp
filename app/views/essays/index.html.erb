
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @essays.each do |essay| %>
    <tr style="<%= essay.is_private? ? 'color:red; font-weight:bold;' : ''  %>">
      <td><%=h essay.title %></td>
      <td><%=h essay.content %></td>
      <td><%= link_to "Show", '/essays/' + essay.title %>       </td>
      <td><%= link_to 'Edit', essay_edit_path(essay.title) %></td>
      <!-- <td><%= link_to 'Destroy', essay, :confirm => 'Are you sure?', :method => :delete %></td> -->
      <!-- <td><%= link_to 'Destroy', '/essays/' + essay.title, :method => :delete%></td> -->
    </tr>
  <% end %>
</table>

