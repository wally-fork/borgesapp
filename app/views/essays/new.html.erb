<h1>New essay</h1>

<!-- fixme: why is this route differente from the one in edit -->
<% form_for(@essay) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :essay_title %><br />
    <%= f.text_field :pretty_title %>
  </p>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :url_name %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', essays_path %>
