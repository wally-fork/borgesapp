<h1> <%=h @username %></h1>

<table>
  <tr>
    <th>Url_Title</th>
    <th></th>
  </tr>

  <% @essays.each do |essay| %>
    <tr>
      <% unless essay.is_private? -%>
        <td><%=h essay.url_title %></td>
        <td><%= link_to "Show", "/#{@username}/essays/#{essay.url_title}" %></td>
      <% end -%>
    </tr>
  <% end %>
</table>

<br />

